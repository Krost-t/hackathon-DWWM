{% extends 'base.html.twig' %}

{% block title %}Stylish Online Store{% endblock %}

{% block body %}
<div class="top-promo-bar">
    <p><strong>Special Offer:</strong> Free Shipping on all the orders above $100</p>
    <button class="close-promo-btn" aria-label="Fermer l'offre spéciale"><i class="fas fa-times"></i></button>
</div>

<header class="stylish-header">
    <div class="header-left-stylish">
        <div class="social-icons">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
        </div>
        <div class="store-brand">
            <h1>Stylish</h1>
            <p>Online Store</p>
        </div>
    </div>
    <div class="header-right-stylish">
        <div class="search-bar-stylish">
            <input type="text" placeholder="" aria-label="Rechercher des produits">
            <button aria-label="Rechercher"><i class="fas fa-search"></i></button>
        </div>
        <a href="#" class="auth-btn">Connection</a>
        <a href="#" class="auth-btn">S'enregistrer</a>
    </div>
</header>

<nav class="main-nav-stylish">
    <ul class="nav-list-stylish">
        <li><a href="#" class="nav-link-stylish">Accueil</a></li>
        <li><a href="#" class="nav-link-stylish">Nos articles</a></li>
        <li><a href="#" class="nav-link-stylish">Blog</a></li>
        <li><a href="#" class="nav-link-stylish">Contact</a></li>
        <li><button class="return-article-btn">Retour d'article</button></li>
    </ul>
</nav>

<main class="product-listing-main" role="main">
    <aside class="filter-sidebar" aria-label="Filtres des produits">
        <div class="filter-header">
            <h2>Filtres</h2>
            <button class="clear-filters-btn" aria-label="Effacer tous les filtres">
                <i class="fas fa-times"></i>
                Effacer
            </button>
        </div>

        <div class="filter-section">
            <h3 class="filter-title">Lifestyle</h3>
            <div class="filter-options">
                {% for item in filters.lifestyle %}
                    <label class="checkbox-container">
                        <input type="checkbox" name="lifestyle" value="{{ item }}">
                        {{ item }}
                        <span class="checkmark"></span>
                    </label>
                {% endfor %}
            </div>
        </div>

        <div class="filter-section expandable">
            <h3 class="filter-title expandable-toggle" aria-expanded="true">
                Genre
                <i class="fas fa-chevron-up"></i>
            </h3>
            <div class="filter-options expandable-content">
                {% for item in filters.genre %}
                    <label class="checkbox-container">
                        <input type="checkbox" name="genre" value="{{ item }}">
                        {{ item }}
                        <span class="checkmark"></span>
                    </label>
                {% endfor %}
            </div>
        </div>

        <div class="filter-section expandable">
            <h3 class="filter-title expandable-toggle" aria-expanded="true">
                Prix
                <i class="fas fa-chevron-up"></i>
            </h3>
            <div class="filter-options expandable-content">
                {% for item in filters.price_ranges %}
                    <label class="checkbox-container">
                        <input type="checkbox" name="price" value="{{ item }}">
                        {{ item }}
                        <span class="checkmark"></span>
                    </label>
                {% endfor %}
            </div>
        </div>

        <div class="filter-section expandable">
            <h3 class="filter-title expandable-toggle" aria-expanded="true">
                Promotions
                <i class="fas fa-chevron-up"></i>
            </h3>
            <div class="filter-options expandable-content">
                {% for item in filters.promotions_offers %}
                    <label class="checkbox-container">
                        <input type="checkbox" name="promotion" value="{{ item }}">
                        {{ item }}
                        <span class="checkmark"></span>
                    </label>
                {% endfor %}
            </div>
        </div>

        <div class="filter-section expandable">
            <h3 class="filter-title expandable-toggle" aria-expanded="true">
                Pointure
                <i class="fas fa-chevron-up"></i>
            </h3>
            <div class="filter-options expandable-content size-grid">
                {% for item in filters.sizes %}
                    <label class="size-checkbox">
                        <input type="checkbox" name="size" value="{{ item }}">
                        <span class="size-label">{{ item }}</span>
                    </label>
                {% endfor %}
            </div>
        </div>

        <div class="filter-section expandable">
            <h3 class="filter-title expandable-toggle" aria-expanded="true">
                Couleur
                <i class="fas fa-chevron-up"></i>
            </h3>
            <div class="filter-options expandable-content color-grid">
                {% for item in filters.colors %}
                    <label class="color-checkbox">
                        <input type="checkbox" name="color" value="{{ item }}">
                        <span class="color-label" style="background-color: {{ item|lower }}"></span>
                        <span class="color-name">{{ item }}</span>
                    </label>
                {% endfor %}
            </div>
        </div>

        <div class="filter-section expandable">
            <h3 class="filter-title expandable-toggle" aria-expanded="true">
                Type de coupe
                <i class="fas fa-chevron-up"></i>
            </h3>
            <div class="filter-options expandable-content">
                {% for item in filters.cut_type %}
                    <label class="checkbox-container">
                        <input type="checkbox" name="cut_type" value="{{ item }}">
                        {{ item }}
                        <span class="checkmark"></span>
                    </label>
                {% endfor %}
            </div>
        </div>
    </aside>

    <section class="product-grid-container" aria-label="Liste des produits">
        <div class="product-grid-header">
            <div class="product-count">
                <span id="product-count">{{ produits|length }}</span> produits
            </div>
            <div class="product-sort">
                <select id="sort-select" aria-label="Trier les produits">
                    <option value="popular">Les plus populaires</option>
                    <option value="price-asc">Prix croissant</option>
                    <option value="price-desc">Prix décroissant</option>
                    <option value="newest">Les plus récents</option>
                </select>
            </div>
        </div>

        <div class="product-grid-stylish">
            {% for produit in produits %}
                <a href="{{ path('app_produit', {'id': produit.id}) }}" 
                   class="product-card-stylish" 
                   tabindex="0"
                   data-genre="{{ produit.genre }}"
                   data-prix="{{ produit.prix }}"
                   data-promotion="{{ produit.promotion|default('') }}"
                   data-taille="{{ produit.taille }}"
                   data-couleur="{{ produit.couleur }}"
                   data-type-coupe="{{ produit.type_coupe }}"
                   data-lifestyle="{{ produit.lifestyle }}">
                    <div class="product-card-image-wrapper-stylish">
                        <img src="{{ asset('images/' ~ produit.image) }}" 
                             alt="{{ produit.nom }}" 
                             loading="lazy">
                        {% if produit.promotion %}
                            <span class="promotion-badge">{{ produit.promotion }}</span>
                        {% endif %}
                    </div>
                    <div class="product-card-content">
                        <h2 class="product-card-title-stylish">{{ produit.nom }}</h2>
                        <p class="product-card-price">{{ produit.prix|number_format(2, ',', ' ') }} €</p>
                        <button class="add-to-cart-btn" aria-label="Ajouter au panier">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Ajouter au panier</span>
                        </button>
                    </div>
                </a>
            {% else %}
                <p>Aucun produit disponible pour le moment.</p>
            {% endfor %}
        </div>
    </section>
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Toggle filter sections
    document.querySelectorAll('.expandable-toggle').forEach(toggle => {
        toggle.addEventListener('click', function() {
            const content = this.nextElementSibling;
            const icon = this.querySelector('i');

            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
                this.setAttribute('aria-expanded', 'true');
            } else {
                content.classList.add('hidden');
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-chevron-down');
                this.setAttribute('aria-expanded', 'false');
            }
        });
    });

    // Gestion des filtres
    const filterCheckboxes = document.querySelectorAll('input[type="checkbox"]');
    const clearFiltersBtn = document.querySelector('.clear-filters-btn');
    let activeFilters = new Map();

    // Fonction pour mettre à jour l'affichage des produits
    function updateProducts() {
        const products = document.querySelectorAll('.product-card-stylish');
        let visibleCount = 0;
        
        products.forEach(product => {
            let shouldShow = true;
            
            // Vérifier chaque filtre actif
            activeFilters.forEach((values, category) => {
                if (values.size > 0) {
                    const productValue = product.dataset[category];
                    if (!productValue || !values.has(productValue)) {
                        shouldShow = false;
                    }
                }
            });
            
            // Afficher ou cacher le produit
            product.style.display = shouldShow ? 'block' : 'none';
            if (shouldShow) visibleCount++;
        });

        // Mettre à jour le compteur de produits
        document.getElementById('product-count').textContent = visibleCount;
    }

    // Gestion des checkboxes
    filterCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            const category = this.name;
            const value = this.value;

            if (!activeFilters.has(category)) {
                activeFilters.set(category, new Set());
            }

            if (this.checked) {
                activeFilters.get(category).add(value);
            } else {
                activeFilters.get(category).delete(value);
                if (activeFilters.get(category).size === 0) {
                    activeFilters.delete(category);
                }
            }

            updateProducts();
        });
    });

    // Effacer tous les filtres
    clearFiltersBtn.addEventListener('click', function() {
        filterCheckboxes.forEach(checkbox => {
            checkbox.checked = false;
        });
        activeFilters.clear();
        updateProducts();
    });

    // Tri des produits
    const sortSelect = document.getElementById('sort-select');
    sortSelect.addEventListener('change', function() {
        const products = Array.from(document.querySelectorAll('.product-card-stylish'));
        const container = document.querySelector('.product-grid-stylish');

        products.sort((a, b) => {
            const priceA = parseFloat(a.dataset.prix);
            const priceB = parseFloat(b.dataset.prix);

            switch (this.value) {
                case 'price-asc':
                    return priceA - priceB;
                case 'price-desc':
                    return priceB - priceA;
                case 'newest':
                    return b.dataset.id - a.dataset.id;
                default:
                    return 0;
            }
        });

        products.forEach(product => container.appendChild(product));
    });

    // Gestion du bouton "Ajouter au panier"
    document.querySelectorAll('.add-to-cart-btn').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            // Ajouter ici la logique pour ajouter au panier
            console.log('Produit ajouté au panier');
        });
    });
});
</script>

